<%- model_class = Prestation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:client_id) %></th>
      <th><%= model_class.human_attribute_name(:employe_id) %></th>
      <th><%= model_class.human_attribute_name(:date_perstation) %></th>
      <th><%= model_class.human_attribute_name(:etat_prestation) %></th>
      <th><%= model_class.human_attribute_name(:somme) %></th>
      <th><%= model_class.human_attribute_name(:payee) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @prestations.each do |prestation| %>
      <tr>
        <td><%= link_to prestation.id, prestation_path(prestation) %></td>
        <td><%= prestation.client_id %></td>
        <td><%= prestation.employe_id %></td>
        <td><%= prestation.date_perstation %></td>
        <td><%= prestation.etat_prestation %></td>
        <td><%= prestation.somme %></td>
        <td><%= prestation.payee %></td>
        <td><%=l prestation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_prestation_path(prestation), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      prestation_path(prestation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_prestation_path,
            :class => 'btn btn-primary' %>
