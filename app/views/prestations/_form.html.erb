<%= simple_form_for @prestation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :client, label_method: :nom &&:prenom %>
  <%= f.association :employe, label_method: :nom %>
  <%= f.input :date_perstation %>
  <!--<%= f.input :etat_prestation %>
  <%= f.input :somme %>
  <%= f.input :payee %>-->
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                prestations_path, :class => 'btn' %>
  </div>
<% end %>
