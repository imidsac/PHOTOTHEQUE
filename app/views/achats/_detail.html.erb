
<div class="row">

  <%- model_class = Achat -%>
<!--<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>-->
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              achats_path, :class => 'btn-xs btn-info'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_achat_path(@achat), :class => 'btn-xs btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              achat_path(@achat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn-xs btn-danger' %>
</div>
</div>

<div class="row">
  <div class="col-sm-5">
<dl class="dl-horizontal span12">
  <dt><strong><%= model_class.human_attribute_name(:type_achat) %>:</strong></dt>
  <% if @achat.type_ac == 'C' %>
  <dd><%= 'Cadre' %></dd>
  <% elsif @achat.type_ac == 'A' %>
  <dd><%= 'Article' %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:fournisseur_id) %>:</strong></dt>
  <dd><%= @fourni.name_company%></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_achat) %>:</strong></dt>
  <dd><%= @achat.date_achat.strftime("%d %b %Y Ã  %H:%M") %></dd>
</dl>
</div>
<div class="col-sm-5">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:etat_achat) %>:</strong></dt>
  <% if @achat.etat_achat == 'n' %>
  <dd><%= 'N-Livret' %></dd>

  <% elsif @achat.etat_achat == 'p' %>
  <dd><%= 'P-Livret' %></dd>
  <% elsif @achat.etat_achat == 'p' %>
  <dd><%= 'T-Livret' %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:somme) %>:</strong></dt>
  <dd><%= number_to_currency(@achat.somme, precision: 0,  unit: " F CFA", format: "%n %u") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payee) %>:</strong></dt>
  <dd><%= number_to_currency(@achat.payee, precision: 0,  unit: " F CFA", format: "%n %u") %></dd>
</dl>
</div>
</div>
