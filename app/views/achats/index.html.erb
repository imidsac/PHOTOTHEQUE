<%- model_class = Achat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fournisseur_id) %></th>
      <th><%= model_class.human_attribute_name(:date_achat) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:somme) %></th>
      <th><%= model_class.human_attribute_name(:payee) %></th>
      <th><%= model_class.human_attribute_name(:etat_achat) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @achats.each do |achat| %>
      <tr>
        <td><%= link_to achat.id, achat_path(achat) %></td>
        <td><%= achat.fournisseur_id %></td>
        <td><%= achat.date_achat %></td>
        <td><%= achat.type %></td>
        <td><%= achat.somme %></td>
        <td><%= achat.payee %></td>
        <td><%= achat.etat_achat %></td>
        <td><%=l achat.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_achat_path(achat), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      achat_path(achat),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_achat_path,
            :class => 'btn btn-primary' %>
