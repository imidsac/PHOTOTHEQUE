<% title "ACHATS" %>
<%- model_class = Achat -%>
<div class="page-header">
  <div class="row ligne1">
    <div class="col-sm-4 blog1">
      <h3><%= t '.title', :default => model_class.model_name.human.pluralize %></h3>
    </div>
    <div class="col-sm-8 blog2">
      <%= render 'search_date_between' %>
    </div>
  </div>

<table id="achats" class="table table-striped table-hover table-condensed display">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:fournisseur_id) %></th>
      <th><%= model_class.human_attribute_name(:fournisseur_libre) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:somme) %></th>
      <th><%= model_class.human_attribute_name(:payee) %></th>
      <th><%= model_class.human_attribute_name(:acount) %></th>
      <th><%= model_class.human_attribute_name(:etat) %></th>
      <!--<th><%= model_class.human_attribute_name(:created_at) %></th>-->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <%
     @somme=0
     @payee=0
     @i=1
     @achats.each do |achat|
       @somme+=achat.somme
       @payee+=achat.payee
  %>
      <tr>
        <td><%= link_to achat.id, achat_path(achat) %></td>
        <td><%= achat.date_achat.strftime("%d %b %Y Ã  %H:%M") %></td>
        <% if achat.fournisseur_id != -1 %>
            <td><%= link_to achat.name_company, fournisseur_path(achat.fournisseur_id), :target => '_blank' %></td>
        <% else %>
            <td><%= achat.name_company  %></td>
        <% end %>
        <td><%= achat.fournisseur_libre %></td>
        <% if achat.type_ac == 'C' %>
        <td><%= 'Cadre' %></td>
        <% elsif achat.type_ac == 'A' %>
        <td><%= 'Article' %></td>
        <% end %>
        <td><%= number_to_currency(achat.somme, precision: 0,  unit: "", format: "%n %u") %></td>
        <td><%= number_to_currency(achat.payee, precision: 0,  unit: "", format: "%n %u")%></td>
        <td><%= number_to_currency(achat.somme-achat.payee, precision: 0, unit: "", format: "%n %u") %></td>
        <% if achat.etat_achat == 'n' %>
        <td><%= 'N-Livret' %></td>
        <% elsif achat.etat_achat == 'p' %>
        <td><%= 'P-Livret' %></td>
        <% elsif achat.etat_achat == 't' %>
        <td><%= 'T-Livret' %></td>
        <% end %>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      achat_path(achat), :class => 'btn btn-info btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_achat_path(achat), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      achat_path(achat),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <% if current_user.role == 'Root' %>
      <tfoot>
      <tr>
        <th colspan="5"><%= 'TOTAL' %></th>
        <th ><%= number_to_currency(@somme, precision: 0, unit: "", format: "%n %u") %></th>
        <th ><%= number_to_currency(@payee, precision: 0, unit: "", format: "%n %u") %></th>
        <th ><%= number_to_currency(@somme-@payee, precision: 0, unit: "", format: "%n %u") %></th>
        <th colspan="3"><%= '' %></th>
      </tr>
      </tfoot>
  <% end  %>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_achat_path,
            :class => 'btn btn-primary' %>