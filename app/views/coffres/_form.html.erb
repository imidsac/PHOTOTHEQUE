<%= simple_form_for @coffre, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :paiement %>
  <%= f.input :font %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                coffres_path, :class => 'btn' %>
  </div>
<% end %>
