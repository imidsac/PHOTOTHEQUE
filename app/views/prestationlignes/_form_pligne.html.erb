
<%= simple_form_for [@prestation, @prestationligne], :html => { :class => 'form-horizontal' } do |f| %>
<% if @prestation.type_pr == 'C' %>


<%= f.association :cadre, collection: Cadre.where.not(id: Prestationligne.select('cadre_id').where("prestationlignes.prestation_id = ?", @prestation.id)), :label_method => lambda { |cadre| "#{cadre.numerobaguete}"}, :include_blank => false %>
<% end %>


<%= f.association :formatphoto, label_method: :dimention, :include_blank => false %>

<%= f.input :qte %>
<%= f.input :prix_u %>

<% if @prestation.type_pr == 'S'%>

<%= f.input :numero_prise %>
<%= f.collection_radio_buttons :type_pl, [['sp', 'SP'], ['rv', 'RV']], :first, :last %><br />
<%= f.collection_radio_buttons :color, [['c', 'E-C'], ['n', 'N-B']], :first, :last %>
<% end %>
<div class="form-actions">
  <%= f.button :submit, :class => 'btn btn-success' %>
  
</div>
<% end %>
