<%- model_class = Vente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      
      <th><%= model_class.human_attribute_name(:client_id) %></th>
      <th><%= model_class.human_attribute_name(:clients) %></th>
      <th><%= model_class.human_attribute_name(:date_vente) %></th>
      <th><%= model_class.human_attribute_name(:etat_vente) %></th>
      <th><%= model_class.human_attribute_name(:somme) %></th>
      <th><%= model_class.human_attribute_name(:payee) %></th>
      <th><%= model_class.human_attribute_name(:type_ve) %></th>
    
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ventes.each do |vente| %>
      <tr>
        <td><%= link_to vente.id, vente_path(vente) %></td>
        
        <td><%= vente.nom %></td>
        <td><%= vente.client_libre %></td>
        <td><%= vente.date_vente %></td>
        <td><%= vente.etat_vente %></td>
        <td><%= vente.somme %></td>
        <td><%= vente.payee %></td>
        <td><%= vente.type_ve %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vente_path(vente), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vente_path(vente),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vente_path,
            :class => 'btn btn-primary' %>
