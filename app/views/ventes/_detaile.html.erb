<%- model_class = Vente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:boutique_id) %>:</strong></dt>
  <dd><%= @vente.boutique_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @vente.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clients) %>:</strong></dt>
  <dd><%= @vente.clients %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_vente) %>:</strong></dt>
  <dd><%= @vente.date_vente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:etat_vente) %>:</strong></dt>
  <dd><%= @vente.etat_vente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:somme) %>:</strong></dt>
  <dd><%= @vente.somme %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payee) %>:</strong></dt>
  <dd><%= @vente.payee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_ve) %>:</strong></dt>
  <dd><%= @vente.type_ve %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ventes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vente_path(@vente), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vente_path(@vente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
