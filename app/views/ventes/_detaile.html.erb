<div class="row">
  <%- model_class = Vente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %> contenu</h1>
</div>
</div>
<div class="row">

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ventes_path, :class => 'btn-xs btn-info'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vente_path(@vente), :class => 'btn-xs btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vente_path(@vente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn-xs btn-danger' %>
</div>
</div>

<div class="row">
  <div class="col-sm-5">
<dl class="dl-horizontal span12">
  <dt><strong><%= model_class.human_attribute_name(:boutique_id) %>:</strong></dt>
  <dd><%= @vente.boutique_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @vente.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clients) %>:</strong></dt>
  <dd><%= @vente.client_libre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_vente) %>:</strong></dt>
  <dd><%= @vente.date_vente %></dd>
  </div>
<div class="col-sm-5">
  <dt><strong><%= model_class.human_attribute_name(:etat_vente) %>:</strong></dt>
  <% if @vente.etat_vente == 'n' %>
  <dd><%= 'N-Livret' %></dd>
  <% elsif @vente.etat_vente == 'p' %>
  <dd><%= 'P-Livret' %></dd>
  <% elsif @vente.etat_vente == 'p' %>
  <dd><%= 'T-Livret' %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:somme) %>:</strong></dt>
  <dd><%= @vente.somme %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payee) %>:</strong></dt>
  <dd><%= @vente.payee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_ve) %>:</strong></dt>
  <dd><%= @vente.type_ve %></dd>
</dl>
</div>
</div>

