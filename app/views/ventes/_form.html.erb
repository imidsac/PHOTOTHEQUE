<%= simple_form_for @vente, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :date_vente, label: "Date" %>
  <%= f.association :boutique %>
    <%= f.association :client, :label_method => lambda { |client| "#{client.nom} | #{client.prenom}"}, :include_blank => true  %>
  <%= f.input :client_libre %>
  <%= f.collection_radio_buttons :type_ve, [['C', 'Cadre'], ['A', 'Article']], :first, :last %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ventes_path, :class => 'btn' %>
  </div>
<% end %>
