<% title "BALANCES " %>
<%- model_class = Balance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:exercice) %></th>
      <th><%= model_class.human_attribute_name(:mois) %></th>
      <th><%= model_class.human_attribute_name(:achats) %></th>
      <th><%= model_class.human_attribute_name(:depenses) %></th>
      <th><%= model_class.human_attribute_name(:ventes) %></th>
      <th><%= model_class.human_attribute_name(:prestations) %></th>
      <th><%= model_class.human_attribute_name(:tva_net) %></th>
      <!--
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    -->
    </tr>
  </thead>
  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.exercice %></td>
        <td><%= balance.mois %></td>
        <td><%= balance.achats %></td>
        <td><%= balance.depenses %></td>
        <td><%= balance.ventes %></td>
        <td><%= balance.prestations %></td>
        <td><%= balance.tva_net %></td>
        <!--
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_balance_path(balance), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      balance_path(balance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      -->
      </tr>
    <% end %>
  </tbody>
</table>
