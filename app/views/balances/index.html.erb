<h1>Listing balances</h1>

<table>
  <thead>
    <tr>
      <th>Exercice</th>
      <th>Mois</th>
      <th>Achats</th>
      <th>Depenses</th>
      <th>Ventes</th>
      <th>Tva</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.exercice %></td>
        <td><%= balance.mois %></td>
        <td><%= balance.achats %></td>
        <td><%= balance.depenses %></td>
        <td><%= balance.ventes %></td>
        <td><%= balance.tva %></td>
        <td><%= link_to 'Show', balance %></td>
        <td><%= link_to 'Edit', edit_balance_path(balance) %></td>
        <td><%= link_to 'Destroy', balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

