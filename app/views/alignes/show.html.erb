<%- model_class = Aligne -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:achat_id) %>:</strong></dt>
  <dd><%= @aligne.achat_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qte) %>:</strong></dt>
  <dd><%= @aligne.qte %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qtelivre) %>:</strong></dt>
  <dd><%= @aligne.qtelivre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:montant) %>:</strong></dt>
  <dd><%= @aligne.montant %></dd>
  <dt><strong><%= model_class.human_attribute_name(:etat) %>:</strong></dt>
  <dd><%= @aligne.etat %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              alignes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_aligne_path(@aligne), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              aligne_path(@aligne),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
