<%- model_class = Aligne -%>
<!--<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>-->
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:achat_id) %></th>
      <th><%= model_class.human_attribute_name(:qte) %></th>
      <th><%= model_class.human_attribute_name(:qtelivre) %></th>
      <th><%= model_class.human_attribute_name(:montant) %></th>
      <th><%= model_class.human_attribute_name(:etat) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @alignes.each do |aligne| %>
      <tr>
        <td><%= link_to aligne.id, achat_aligne_path(@achat, aligne) %></td>
        <td><%= aligne.achat_id %></td>
        <td><%= aligne.qte %></td>
        <td><%= aligne.qtelivre %></td>
        <td><%= aligne.montant %></td>
        <td><%= aligne.etat %></td>
        <td><%=l aligne.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_achat_aligne_path(@achat, aligne), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      [@achat, aligne],
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

