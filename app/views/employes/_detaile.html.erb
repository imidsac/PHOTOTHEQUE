<%- model_class = Employe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nom) %>:</strong></dt>
  <dd><%= @employe.nom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prenom) %>:</strong></dt>
  <dd><%= @employe.prenom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sexe) %>:</strong></dt>
  <dd><%= @employe.sexe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @employe.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @employe.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @employe.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:compte_banc) %>:</strong></dt>
  <dd><%= @employe.compte_banc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salaireb) %>:</strong></dt>
  <dd><%= @employe.salaireb %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_em) %>:</strong></dt>
  <dd><%= @employe.type_em %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_recru) %>:</strong></dt>
  <dd><%= @employe.date_recru %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employe_path(@employe), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employe_path(@employe),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
