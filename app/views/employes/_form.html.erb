<%= simple_form_for @employe, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nom %>
  <%= f.input :prenom %>
  <%= f.input :sexe %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <%= f.input :email %>
  <%= f.input :compte_banc %>
  <%= f.input :salaireb %>
  <%= f.input :type_em %>
  <%= f.input :date_recru %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employes_path, :class => 'btn' %>
  </div>
<% end %>
