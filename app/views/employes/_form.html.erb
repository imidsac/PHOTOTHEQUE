<%= simple_form_for @employe, :html => { :class => 'form-horizontal' } do |f| %>

    <div class="row row-1">
      <div class="col-sm-4">
  <%= f.input :nom %>
  <%= f.input :prenom %>
        <%= f.collection_radio_buttons :sexe, [['m', 'Masculin'], ['f', 'Feminin']], :first, :last, :wrapper => :inline_checkbox %>

        <%= f.input :phone %>
  <%= f.input :address %>
        <hr/>
      </div>

      <div class="col-sm-4">
  <%= f.input :email %>
  <%= f.input :compte_banc %>
  <%= f.input :salaireb, :label => 'Salaire de base' %>
        <%= f.collection_radio_buttons :type_em, [['r', 'Reguilier'], ['c', 'Contractuelle']], :first, :last, :wrapper => :inline_checkbox %>

        <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employes_path, :class => 'btn' %>
  </div>
      </div>

    </div><!-- row-1-->
<% end %>
