<%= simple_form_for @depense, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= f.input :categoriedep_id %>
  <%= f.input :montant %>
  <%= f.input :etat_dep %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                depenses_path, :class => 'btn' %>
  </div>
<% end %>
