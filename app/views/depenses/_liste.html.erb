<%- model_class = Depense -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:categoriedep_id) %></th>
      <th><%= model_class.human_attribute_name(:montant) %></th>
      <th><%= model_class.human_attribute_name(:etat_dep) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @depenses.each do |depense| %>
      <tr>
        <td><%= link_to depense.id, depense_path(depense) %></td>
        <td><%= depense.description %></td>
        <td><%= depense.categoriedep_id %></td>
        <td><%= depense.montant %></td>
        <td><%= depense.etat_dep %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_depense_path(depense), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      depense_path(depense),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_depense_path,
            :class => 'btn btn-primary' %>
