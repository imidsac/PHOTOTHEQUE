<%- model_class = Monetaire -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:money) %>:</strong></dt>
  <dd><%= @monetaire.money %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code_money) %>:</strong></dt>
  <dd><%= @monetaire.code_money %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valeur) %>:</strong></dt>
  <dd><%= @monetaire.valeur %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              monetaires_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_monetaire_path(@monetaire), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              monetaire_path(@monetaire),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
