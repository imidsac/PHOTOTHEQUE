<% title "CADRES " %>

<%- model_class = Cadre -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize %></h3>
</div>


<table id="cadres" class="table table-striped table-hover table-condensed display">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:numerobaguete) %></th>
      <th><%= model_class.human_attribute_name(:info) %></th>
      <th><%= model_class.human_attribute_name(:stock) %></th>
      <th><%= model_class.human_attribute_name(:vstock) %></th>
      <th><%= model_class.human_attribute_name(:Prix_detail) %></th>
      <th><%= model_class.human_attribute_name(:Prix_gros) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cadres.each do |cadre| %>
      <tr>
        <td><%= link_to cadre.id, cadre_path(cadre) %></td>
        <td><%= cadre.numerobaguete %></td>
        <td><%= cadre.info %></td>
        <td><%= cadre.stock %></td>
        <td><%= cadre.vstock %></td>
        <td><%= cadre.pdetail %></td>
        <td><%= cadre.pgros %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      cadre_path(cadre), :class => 'btn btn-info btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cadre_path(cadre), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cadre_path(cadre),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_cadre_path,
            :class => 'btn btn-primary' %>