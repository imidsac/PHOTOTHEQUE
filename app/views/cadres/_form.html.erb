<%= simple_form_for @cadre, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :numerobaguete %>
  <%= f.input :info %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cadres_path, :class => 'btn' %>
  </div>
<% end %>
