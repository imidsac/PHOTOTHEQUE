<%= simple_form_for [@boutique, @paiement], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :datepaiement %>
    <%= f.association :banque, collection: Banque.all, :label_method => lambda { |banque| "#{banque.nom} | #{banque.compte}"}, :include_blank => false %>
    <%= f.input :motif %>
    <%= f.input :montant %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  boutique_url(@boutique.id, :tout_paiement_boutique => true), :class => 'btn' %>
    </div>
<% end %>
