<%= simple_form_for [@banque, @paiement], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :datepaiement, :label => 'Date' %>
    <%= f.input :type_paiement, :as => :hidden, input_html: {value: 'pi'} %>
    <%= f.association :banque, collection: Banque.compte_banc, :label_method => lambda { |banque| "#{banque.nom} | #{banque.compte}"}, :include_blank => false %>
    <%= f.input :motif %>
    <%= f.input :montant %>
    <div class="form-actions">
      <%= f.button :submit, 'Create', :class => 'btn btn-primary' %>
    </div>
<% end %>
