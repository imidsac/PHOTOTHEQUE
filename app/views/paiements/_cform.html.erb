<%= simple_form_for [@client, @paiement], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :datepaiement %>
    <%= f.input :motif %>
    <%= f.input :montant %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  client_url(@client.id, :tout_paiement_client => true), :class => 'btn' %>
    </div>
<% end %>
