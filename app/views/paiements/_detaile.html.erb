<%- model_class = Paiement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vente_id) %>:</strong></dt>
  <dd><%= @paiement.vente_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @paiement.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:achat_id) %>:</strong></dt>
  <dd><%= @paiement.achat_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fournisseur_id) %>:</strong></dt>
  <dd><%= @paiement.fournisseur_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:datepaiement) %>:</strong></dt>
  <dd><%= @paiement.datepaiement %></dd>
  <dt><strong><%= model_class.human_attribute_name(:motif) %>:</strong></dt>
  <dd><%= @paiement.motif %></dd>
  <dt><strong><%= model_class.human_attribute_name(:montant) %>:</strong></dt>
  <dd><%= @paiement.montant %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              paiements_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_paiement_path(@paiement), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              paiement_path(@paiement),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
