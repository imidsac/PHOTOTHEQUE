<%= simple_form_for [@achat, @paiement], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :datepaiement %>
    <%= f.input :motif %>
    <%= f.input :montant %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  [@achat], :class => 'btn' %>
    </div>
<% end %>
