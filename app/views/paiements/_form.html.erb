<%= simple_form_for(@paiement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :vente %>
    <%= f.association :client %>
    <%= f.association :achat %>
    <%= f.association :fournisseur %>
    <%= f.input :datepaiement %>
    <%= f.input :motif %>
    <%= f.input :montant %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
