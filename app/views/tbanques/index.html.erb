<%- model_class = Tbanque -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:banque_id) %></th>
      <th><%= model_class.human_attribute_name(:type_rv) %></th>
      <th><%= model_class.human_attribute_name(:montant) %></th>
      <th><%= model_class.human_attribute_name(:porteur) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tbanques.each do |tbanque| %>
      <tr>
        <td><%= link_to tbanque.id, tbanque_path(tbanque) %></td>
        <td><%= tbanque.banque_id %></td>
        <td><%= tbanque.type_rv %></td>
        <td><%= tbanque.montant %></td>
        <td><%= tbanque.porteur %></td>
        <td><%=l tbanque.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tbanque_path(tbanque), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tbanque_path(tbanque),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tbanque_path,
            :class => 'btn btn-primary' %>
