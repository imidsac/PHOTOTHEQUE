<dl class="dl-horizontal">
  <dt><strong><%= 'Nom' %>:</strong></dt>
  <dd><%= @client.nom %></dd>
  <dt><strong><%= 'Prenom' %>:</strong></dt>
  <dd><%= @client.prenom %></dd>
  <dt><strong><%= 'Phone' %>:</strong></dt>
  <dd><%= @client.phone %></dd>
  <dt><strong><%= 'Address' %>:</strong></dt>
  <dd><%= @client.address %></dd>
  <dt><strong><%= 'Email' %>:</strong></dt>
  <dd><%= @client.email %></dd>
  <dt><strong><%= 'Type' %>:</strong></dt>
  <% if @client.type_cl == 'o' %>
      <dd><%= 'Ordinnaire' %></dd>
  <% else %>
      <dd><%= 'Grossiste' %></dd>
  <% end %>
</dl>