<%= simple_form_for @client, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="row row-1">
      <div class="col-sm-4">
  <%= f.input :nom %>
  <%= f.input :prenom %>
  <%= f.input :phone %>

        <hr/>
      </div>
      <div class="col-sm-4">
  <%= f.input :address %>
  <%= f.input :email %>
  <%= f.collection_radio_buttons :type_cl, [['o', 'Ordinaire'], ['g', 'Grossiste']], :first, :last, :wrapper => :inline_checkbox %>

    <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn' %>
  </div>
      </div>

    </div><!-- row-1-->
<% end %>
