<% title "BANQUE" %>

<%- model_class = Banque -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nom) %></th>
      <th><%= model_class.human_attribute_name(:compte) %></th>
      <th><%= model_class.human_attribute_name(:solde) %></th>
      <% if current_user.role == 'Root' %>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>

    </tr>
  </thead>
  <tbody>
    <% @i=1
       @banques.each do |banque| %>
      <tr>
        <td><%= @i %></td>
        <td><%= banque.nom %></td>
        <td><%= banque.compte %></td>
        <td><%= banque.solde %></td>
        <td>
          <% if current_user.role == 'Root' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      banque_path(banque), :class => 'btn btn-info btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_banque_path(banque), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      banque_path(banque),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        <% end %>
        </td>
      </tr>
    <% @i+=1
       end %>
  </tbody>
</table>

